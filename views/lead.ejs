<%-include('partials/header')%>
<section>
<h1 id="gun">RSA Wills</h1>
<p>Kindly fill in your personal details and make payment</p>
<div class="first-form">
    <h4>Personal Details</h4>

    <form action="/submit-lead" method="POST">
        <div class="two-column-form">
            <div class="form-group">
                <label for="RSA-Pin">RSA Pin</label>
                <input type="text" class="form-control" name="RSA-Pin" required>
            </div>
            <div class="form-group">
                <label for="fname">First Name</label>
                <input type="text" class="form-control" id="fname" name="fname" required>
            </div>
            <div class="form-group">
                <label for="lname">Last Name</label>
                <input type="text" class="form-control" id="lname" name="lname" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth</label>
                <input type="date" class="form-control" id="dob" name="dob" required>
            </div>
        </div>
        <div class="apex-next">
            <div class="makePay"><p>Make a payment of &#8358;40,000</p></div>
            <button type="submit" class="btn btn-primary">Make Payment</button>
        </div>
    </form>
</div>

<%-include('partials/footer')%>