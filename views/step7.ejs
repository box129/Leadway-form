    <script>
        function notifyParentWindow(data) {
            window.parent.postMessage(data, "*");
        }

        let currentStep = 7;
        notifyParentWindow({ type: "step-update", step: currentStep });

        let previousBtn = document.getElementById("previous");
        previousBtn.addEventListener('click', () => {
            let currentStep = 7; // or get this dynamically
            notifyParentWindow({ type: "button-click", step: currentStep });
            window.location.href = "/render-step/6";
        });
    </script>
